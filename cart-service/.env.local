# Server configuration
PORT=5002
NODE_ENV=development

# MongoDB connection for local development
# Change username and password to match your local MongoDB credentials
MONGODB_URI=mongodb://username:password@localhost:27017/cart-service?authSource=admin

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# JWT Secret (must match user-service)
JWT_SECRET=your_jwt_secret_replace_in_production

# Authentication bypass (set to false in production)
BYPASS_AUTH=true